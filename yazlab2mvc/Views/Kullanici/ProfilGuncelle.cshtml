@model yazlab2mvc.Models.Kullanicilar

<h2>Bilgilerimi Güncelle</h2>

@if (ViewBag.Message != null)
{
    <div class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger")">
        @ViewBag.Message
    </div>
}

<form asp-action="ProfilGuncelle" method="post" enctype="multipart/form-data">
    <!-- enctype eklendi -->
    <label>Ad:</label>
    <input asp-for="Ad" class="form-control" />

    <label>Soyad:</label>
    <input asp-for="Soyad" class="form-control" />

    <label>E-posta:</label>
    <input asp-for="Eposta" type="email" class="form-control" />

    <label>Telefon Numarası:</label>
    <input asp-for="TelefonNumarasi" class="form-control" />

    <label>Konum:</label>
    <input asp-for="Konum" class="form-control" />

    <!-- Profil Fotoğrafı Yükleme Alanı -->
    <div class="form-group mt-3">
        <label>Profil Fotoğrafı:</label>
        <input type="file" name="ProfilFotografi" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
</form>

